---
import { getRepoStructure, type FileNode } from '../lib/repository';
import SearchBar from './SearchBar.astro';

const structure = await getRepoStructure();

function renderTree(nodes: FileNode[], level = 0): string {
  return nodes
    .sort((a, b) => {
      if (a.type !== b.type) return a.type === 'directory' ? -1 : 1;
      return a.name.localeCompare(b.name);
    })
    .map(node => {
      if (node.type === 'directory') {
        return `
          <details class="nav-directory" style="padding-left: ${level * 16}px">
            <summary>${node.name}</summary>
            <div class="nav-children">
              ${node.children ? renderTree(node.children, level + 1) : ''}
            </div>
          </details>
        `;
      } else {
        return `
          <a href="/doc/${node.path}" class="nav-file" style="padding-left: ${level * 16}px">
            ${node.name}
          </a>
        `;
      }
    })
    .join('');
}
---

