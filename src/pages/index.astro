---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import { getFileContent } from '../lib/repository';
import { marked } from 'marked';

const readmeContent = await getFileContent('README.md');
const htmlContent = marked(readmeContent);
---

<Layout>
  <Navigation />
  <main class="content">
    <article class="markdown-content" set:html={htmlContent} />
  </main>
</Layout>

<style>
  .content {
    margin-left: 280px;
    min-height: 100vh;
    background: #f5f5f5;
  }

  .markdown-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px;
    background: white;
    min-height: 100vh;
    line-height: 1.8;
  }

  :global(.markdown-content h1) {
    font-size: 36px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 32px 0 16px;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 12px;
  }

  :global(.markdown-content h2) {
    font-size: 28px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 28px 0 12px;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 8px;
  }

  :global(.markdown-content h3) {
    font-size: 22px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 24px 0 12px;
  }

  :global(.markdown-content p) {
    margin: 16px 0;
    color: #333;
    font-size: 16px;
  }

  :global(.markdown-content a) {
    color: #4a9eff;
    text-decoration: none;
  }

  :global(.markdown-content a:hover) {
    text-decoration: underline;
  }

  :global(.markdown-content ul, .markdown-content ol) {
    margin: 16px 0;
    padding-left: 32px;
    color: #333;
  }

  :global(.markdown-content li) {
    margin: 8px 0;
  }

  :global(.markdown-content code) {
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
    color: #e91e63;
  }

  :global(.markdown-content pre) {
    background: #1e1e1e;
    padding: 16px;
    border-radius: 6px;
    overflow-x: auto;
    margin: 16px 0;
  }

  :global(.markdown-content pre code) {
    background: none;
    color: #d4d4d4;
    padding: 0;
  }

  :global(.markdown-content blockquote) {
    border-left: 4px solid #4a9eff;
    padding-left: 16px;
    margin: 16px 0;
    color: #666;
    font-style: italic;
  }

  :global(.markdown-content table) {
    width: 100%;
    border-collapse: collapse;
    margin: 16px 0;
  }

  :global(.markdown-content th, .markdown-content td) {
    border: 1px solid #e0e0e0;
    padding: 12px;
    text-align: left;
  }

  :global(.markdown-content th) {
    background: #f5f5f5;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .content {
      margin-left: 0;
    }

    .markdown-content {
      padding: 24px;
    }
  }
</style>
